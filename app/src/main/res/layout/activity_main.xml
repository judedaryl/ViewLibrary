<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#053e70"
    tools:context=".MainActivity">

    <com.savvysherpa.loginview.LoginView
        android:id="@+id/LoginView"
        android:layout_width="0dp"
        app:logo_size="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:submit_text="Login"
        app:submit_background_color="#176af0"
        app:title="Joy Builder"
        app:login_hint="Email"
        app:title_color="@android:color/white"
        app:input_color="@android:color/white"
        app:show_forgot_password="true"></com.savvysherpa.loginview.LoginView>

</android.support.constraint.ConstraintLayout>